%h1 Listing updates

%table
  %thead
    %tr
      %th Event
      %th Title
      %th Body
      %th
      %th
      %th

  %tbody
    - @updates.each do |update|
      %tr
        %td= update.event
        %td= update.title
        %td= update.body
        %td= link_to 'Show', update
        %td= link_to 'Edit', edit_update_path(update)
        %td= link_to 'Delete', update, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Update', new_update_path
