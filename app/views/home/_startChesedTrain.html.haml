%div{ class: "flex flex-col items-center", data: {controller: 'home' } } 
  .mb-4.lg:mt-10
    %span{ class: "font-lato font-[700] text-[2rem] lg:text-[4rem] font-bold text-secondary" } Acts of Chesed, Delivered
  .mt-2
    = link_to select_chesed_path, class: "bg-primary-original text-white lg:w-[22rem] w-[11rem] lg:h-[5rem] h-[2rem]  rounded-[0.7rem] cursor-pointer border border-secondary flex items-center justify-center lg:space-x-4 space-x-2" do
      %span{ class: "lg:text-[1.5rem] font-alice text-center"} Start a Chesed Train
      = image_tag "arrow_left.svg", class: "lg:w-[2rem] w-[0.7rem] lg:h-[2.2rem] h-[0.7rem] lg:border lg:border-secondary lg:rounded-lg lg:px-[0.4rem] lg:py-[0.5rem]", alt: "Arrow Left"
  %div{ class: "mt-6 flex justify-center items-center"}
    = image_tag "logo.png", id: "logo", class: "w-3/6 transition-all duration-1000 ease-in-out", alt: "Logo"
