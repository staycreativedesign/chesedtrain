%footer{ class: "w-full flex flex-col items-center justify-center bg-primary py-4 transition-all duration-300"}
  %div{ class: "container mx-auto w-2/3 sm:hidden"}
    .flex.flex-col.items-center.justify-center.space-y-4
      .logo
        = image_tag "newfooterlogo.png", class: "w-full", alt: "Chesed Train Logo"
      
      .links.flex.justify-between.text-secondary.w-full
        = link_to "About Us", about_path, class: "hover:text-gray-900 underline w-1/3 text-center text-[0.5rem]"
        = link_to "Contact Us", new_contact_path, class: "hover:text-gray-900 underline w-1/3 text-center text-[0.5rem]"
        %b
          = link_to "Chesed Train Pro", new_payment_path, class: "hover:text-gray-900 underline w-1/3 text-center text-[0.5rem]"
      
      .links.flex.justify-between.text-secondary.w-full
        = link_to "Privacy Policy", privacy_policy_path, class: "hover:text-gray-900 underline w-1/3 text-center text-[0.5rem]"
        = link_to "Potluck", new_potluck_path, class: "hover:text-gray-900 underline w-1/3 text-center text-[0.5rem]"
        = link_to "Terms of Service", tos_path, class: "hover:text-gray-900 underline w-1/3 text-center text-[0.5rem]" 
  %div{ class: "container sm:flex sm:flex-row hidden"}
    %div{ class: "flex flex-col items-center justify-center space-y-4 w-1/2" }
      .links.flex.text-secondary.w-full
        = link_to "About Us", about_path, class: "hover:text-gray-900 underline w-1/2  lg:text-[1.5rem] text-[1rem]"
        = link_to "Contact Us", new_contact_path, class: "hover:text-gray-900 underline w-1/2  lg:text-[1.5rem] text-[1rem]  "
      .links.flex.text-secondary.w-full
        = link_to "Potluck", new_potluck_path, class: "hover:text-gray-900 underline w-1/2  lg:text-[1.5rem] text-[1rem]"
        = link_to "Privacy Policy", privacy_policy_path, class: "hover:text-gray-900 underline w-1/2  lg:text-[1.5rem] text-[1rem]"
      .links.flex.text-secondary.w-full
        = link_to "Chesed Train Pro",new_payment_path,  class: "hover:text-gray-900 underline w-1/2  lg:text-[1.5rem] text-[1rem]"
        = link_to "Terms of Service", tos_path, class: "hover:text-gray-900 underline w-1/2  lg:text-[1.5rem] text-[1rem]"
    %div{ class: "logo flex justify-center items-center w-1/2"}
      = image_tag "newfooterlogo.png", class: "w-full", alt: "Chesed Train Logo"
