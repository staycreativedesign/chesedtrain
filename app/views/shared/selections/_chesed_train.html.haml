- if current_user && !current_user.guest?
  .container.p-10
    .flex.flex-col.bg-primary.items-center.justify-center.border.border-primary.rounded-lg.lg:p-10.p-5.w-full.relative
      %div{ class: "text-secondary lg:text-3xl text-[1rem] font-lato font-[700] mb-5"}
        Volunteer
      = form_with model: @selection, url: add_volunteer_chesed_train_event_date_path(@event, @selection), method: :patch, class: 'lg:space-y-4 space-y-2 lg:w-1/2 w-full' do |f|
        - if @selection.errors.any?
          %div{:style => "color: red"}
            %h2
              = pluralize(@selection.errors.count, "error")
              prohibited this selection from being saved:
            %ul
              - @selection.errors.each do |error|
                %li= error.full_message
        .area.mb-5
          %div{ class: "text-secondary text-lg font-lato font-semibold"} 
            Menu Item Selected
          %div{ class: "text-secondary text-lg font-lato font-normal"} 
            = @selection.date_weekday
            \|
            = @selection.date_month
            \|
            = @selection.date_number
          %div.mt-2{ class: "text-secondary text-l font-lato font-semibold"} 
            Volunteer
          %div{ class: "text-secondary text-lg font-lato font-normal"} 
            = current_user.name
        .area
          %div.mt-2{ class: "text-secondary text-l font-lato font-semibold"} 
            What will you be sending:
          = f.text_field :bringing, class: 'w-full lg:px-3 px-2 lg:py-2 py-1 border border-secondary rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500'
          %div.mt-2{ class: "text-secondary text-l font-lato font-semibold"} 
            Your message:
          = f.text_field :special_note, class: 'w-full lg:px-3 px-2 lg:py-2 py-1 border border-secondary rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500'
        .mt-10.flex.justify-center.lg:space-x-2.space-y-5.items-center.lg:flex-row.flex-col
          = f.submit "Volunteer", class: 'lg:mt-5 w-[11rem] bg-primary-original border border-secondary text-white lg:py-2 py-1 text-center rounded-xl hover:bg-blue-700 transition duration-200 cursor-pointer'
          = link_to "Back", chesed_train_path(@event), class: 'w-[11rem] bg-primary-original border border-secondary text-white lg:py-2 py-1 text-center rounded-xl hover:bg-blue-700 transition duration-200 cursor-pointer'
- else
  .container.p-10
    .flex.flex-col.items-center.justify-center.border.border-primary.rounded-lg.lg:p-10.p-5.w-full.relative
      %div{ class: "text-secondary lg:text-[2rem] text-[1rem] font-lato font-[700] mb-5"} Create your Account
      = render partial: 'shared/steps/user', locals: { user: @user, url: setup_volunteer_chesed_train_event_date_path(@event, @selection), method: :post }
