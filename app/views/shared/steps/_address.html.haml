= form_with model: event, url: url, method: :patch, class: 'lg:space-y-4 space-y-2 lg:w-1/2 w-full' do |f|
  = render partial: "shared/field", locals: { field: 'address1', model: event, label: "Address", f: f }
  .form-group
    = f.label :address2, 'Address continued', class: 'w-full-label'
    = f.text_field :address2, class: 'w-full-field'
    - if event.errors[:address2].any?
      .text-danger
        = event.errors[:address2].join(", ").upcase
  .flex.flex-row.space-x-2
    %div{ class: "flex flex-col w-1/3" }
      = render partial: "shared/field", locals: { field: 'city', model: event, label: "City", f: f }
    %div{ class: "flex flex-col w-1/3" }
      = render partial: "shared/field", locals: { field: 'state', model: event, label: "State/Province", f: f }
    %div{ class: "flex flex-col w-1/3" }
      = render partial: "shared/field", locals: { field: 'postal_code', model: event, label: "Zipcode/Postal Code", f: f }
  = render partial: "shared/field", locals: { field: 'country', model: event, label: "Country", f: f }
  .mt-10.flex.justify-center.lg:space-x-2.space-y-5.items-center.lg:flex-row.flex-col
    - if @event.type == 'Potluck'
      = link_to "Back", steps_potluck_path(event, step: 1), class: 'mt-5 w-[11rem] button text-center'
    - else
      = link_to "Back", steps_chesed_train_path(event, step: 1), class: 'mt-5 w-[11rem] button text-center'

    = f.submit "Next", class: 'w-[11rem] button'

  %div{ class: "text-center text-secondary lg:flex hidden absolute left-[10%] bottom-12  font-normal"}
    Step #{step} of 4 
  %div{ class: "text-center text-secondary lg:hidden font-normal pt-10"}
    Step #{step} of 4
