= form_for [:admin, user],  { autocomplete: "off" } do |f|
  = f.hidden_field :tos, value: true
  .grid.grid-cols-2.gap-4
    %div
      = f.label :first_name, class: 'w-full-label'
      = f.text_field :first_name, class: 'w-full-field'
      - if user.errors[:first_name].any?
        .text-danger
          = user.errors[:first_name].join(", ").upcase
    %div
      = f.label :last_name, class: 'w-full-label'
      = f.text_field :last_name, class: 'w-full-field'
      - if user.errors[:last_name].any?
        .text-danger
          = user.errors[:last_name].join(", ").upcase
  .grid.grid-cols-2.gap-4.mt-4
    %div
      = f.label :email_address, class: 'w-full-label'
      = f.email_field :email_address, class: 'w-full-field', autocomplete: 'off'
      - if user.errors[:email].any?
        .text-danger
          = user.errors[:email].join(", ").upcase
    %div
      = f.label :phone_number, class: 'w-full-label'
      = f.text_field :phone_number, class: 'w-full-field'
      - if user.errors[:phone_number].any?
        .text-danger
          = user.errors[:phone_number].join(", ").upcase

  .grid.grid-cols-2.gap-4.mt-4
    .area
      = f.label :password, "Password", class: 'w-full-label'
      = f.password_field :password, class: 'w-full-field', autocomplete: 'off'
      - if user.errors[:password].any?
        .text-danger
          = user.errors[:password].join(", ").upcase
    .area
      = f.label :password_confirmation, "Password Confirmation", class: 'w-full-label'
      = f.password_field :password_confirmation, class: 'w-full-field', autocomplete: 'off'
      - if user.errors[:password_confirmation].any?
        .text-danger
          = user.errors[:password_confirmation].join(", ").upcase

  .grid.grid-cols-2.gap-4.mt-4.inline
    %div.flex
      = f.check_box :is_admin, class: 'mr-4'
      = f.label :is_admin, class: 'w-full-label'
    %div.flex
      = f.check_box :is_paying, class: 'mr-4'
      = f.label :is_paying, class: 'w-full-label'
  .grid.grid-cols-2.gap-4.mt-4.inline
    %div.flex
      = f.check_box :sms, class: 'mr-4'
      = f.label 'Send me SMS updated and news', class: 'w-full-label'
    %div.flex
      = f.check_box :updates, class: 'mr-4'
      = f.label 'Send me Chesed Train news and updates', class: 'w-full-label'
  .mt-20.flex.justify-center
    = f.submit nil, class: 'w-[11rem] bg-primary-original border border-secondary text-white lg:py-2 py-1 lg:px-4 px-2 rounded-xl transition duration-200 cursor-pointer lg:text-[1rem] text-[0.7rem]'
