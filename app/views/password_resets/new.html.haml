.container.p-10
  .flex.flex-col.items-center.justify-center.border.border-primary.rounded-lg.lg:p-10.p-5.w-full.relative
    %div{ class: "text-secondary lg:text-[2rem] text-[1rem] font-lato font-[700] mb-5"} 
      Forgot your password
    = form_with url: password_resets_path, method: :post, :html => { :honeypot => true } , class: 'lg:space-y-4 space-y-2 lg:w-1/2 w-full' do |f|
      .form-group
        = f.label :email_address, "Email Address", class: 'block lg:text-[1.1rem] text-[0.7rem] font-bold text-secondary mb-1'
        = f.email_field :email_address, class: 'bg-transparent w-full lg:px-3 px-2 lg:py-2 py-1 border border-secondary rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500'
      .mt-10.flex.justify-center.lg:space-x-2.items-center.lg:flex-row.flex-col
        = recaptcha_tags(noscript: false)
      .mt-10.flex.justify-center.lg:space-x-2.items-center.lg:flex-row.flex-col
        = f.submit "Send Reset Instructions", class: 'bg-primary-original border border-secondary text-white px-2 lg:py-2 py-1 text-center rounded-xl hover:bg-blue-700 transition duration-200 cursor-pointer'
        = link_to "Back", :back, class: 'mt-2 px-4 secondary border border-secondary text-white lg:py-2 py-1 text-center rounded-xl hover:bg-blue-700 transition duration-200 cursor-pointer'
